<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppTest.AddTaskPage">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Text="Задача" Grid.Row="0"/>
        <Label Text="Бригада" Grid.Row="1"/>

        <Entry x:Name="task" Grid.Row="0" Grid.Column="1" Height="25"/>
        <Picker x:Name="brig" Grid.Row="1" Grid.Column="1" Height="25"/>

        <Button  Text="Создать" Clicked="BtnVxod_Clicked"  x:Name="BtnVxod" Grid.Column="0" Grid.Row="3" Width="100" Height="30"/>
        <Button Text="Оттмена" Clicked="Cle_Clicked"  x:Name="Cle" Grid.Column="2" Grid.Row="3" Width="100" Height="30"/>
    </Grid>
</ContentPage>